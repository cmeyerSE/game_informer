<!DOCTYPE html>
<html>
  <head>
    <title>GameInformer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <section class="hero is-warning is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to 'Game Informer', root_path, class:"navbar-item" %>
          <span class="navbar-burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
          <%= link_to "Create New Review", new_review_path, class:"navbar-item" %>
            <% if Current.user %>
            <%= link_to "Logout", logout_path, method: :delete, class:"navbar-item" %>
            <% else %>
            <%= link_to "Sign up", sign_up_path, class:"navbar-item" %>
            <%= link_to "Log In", sign_in_path, class:"navbar-item" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= yield :page_title %>
      </h1>
    </div>
  </div>
  </section>

    <%= yield %>
  </body>
</html>
