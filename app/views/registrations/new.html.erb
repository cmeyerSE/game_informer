<% content_for :page_title, "Sign Up for Game Informer" %>

<div class="section">
<%= simple_form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |m| %>
            <div><%= m %></div>
        <% end %>
        </div>
    <% end %>

    
    <div class="field">
        <div class="control">
        <%= f.input :username, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'}, placeholder: "username" %>
        </div>
    </div>
    <div class="field">
        <div class="control">
        <%= f.input :password, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'}, placeholder: "password" %>
        </div>
    </div>
    <div class="field">
        <div class="control">
        <%= f.input :password_confirmation, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'}, placeholder: "password" %>
        </div>
    </div>
    <div class="field">
        <div class="control">
        <%= f.input :email, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'}, placeholder: "user@email.com" %>
        </div>
    </div>
    <%= f.button :submit, class: "button is-success is-small" %>
<% end %>
</div>