<% content_for :page_title, "Sign In" %>

<div class="section">
    <div class="container">
    <div class="columns is-centered">
    
        <div class="column is-4">
        <%= form_with url: sign_in_path do |form| %>
            <div class="field">
                <div class="control">
                <%= form.label :username %>
                <%= form.text_field :username, class: "input", placeholder: "username" %>
                </div>
            </div>
            <div class="field">
                <div class="control">
                <%= form.label :password %>
                <%= form.password_field :password, class: "input", placeholder: "password" %>
                </div>
            </div>
            <div class="field">
                <div class="control">
                <%= form.submit "Sign In", class: "button is-success is-inverted is-rounded is-small" %>
                </div>
            </div>
        <% end %>
        <%= button_to 'Login with GitHub', '/auth/github', class: "button is-link is-light is-rounded is-small" %>
        </div>
    </div>
    </div>
</div>