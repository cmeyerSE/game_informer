<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="content">
                <p>
                    <strong><%= comment.name %>: </strong>
                    <%= comment.description %>
                </p>
            </div>
        </div>

        <%= link_to 'Delete', [comment.review, comment], method: :delete, class: "button is-danger", data: { confirm: "Are you sure?" } %>
    </article>
</div>