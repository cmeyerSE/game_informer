<% content_for :page_title, "Index" %>

<section class="section">
    <div class="container">
        <% @reviews.each do |review| %>
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4"><%= link_to review.title, review %></p>
                        </div>
                    </div>
                    <div class="content">
                        <%= review.content %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>