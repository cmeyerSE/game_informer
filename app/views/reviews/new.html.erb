<% content_for :page_title, "Create New Review" %>

<div class="section">
    <%= simple_form_for @review do |f| %>
    <div class="field">
        <div class="control">
            <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'} %>
        </div>
    </div>
    <%= f.button :submit, 'Create New Review', class: "button is-success is-small" %>
    <% end %>
</div>