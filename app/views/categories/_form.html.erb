<div class="section">
    <%= simple_form_for @category do |f| %>
    <div class="field">
        <div class="control">
            <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
        </div>
    </div>
    <%= f.button :submit, class: "button is-success is-small" %>
    <% end %>
</div>